    <TextView android:text="Issue Title" android:layout_width="fill_parent" android:paddingTop="5dp" android:id="@+id/issueTitle" android:paddingRight="5dp" android:paddingLeft="5dp" android:layout_height="wrap_content" android:layout_weight="0" android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
