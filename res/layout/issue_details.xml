        <TextView android:text="posted at" android:layout_width="wrap_content" android:id="@+id/textView1" android:paddingRight="5dp" android:paddingLeft="5dp" android:textAppearance="?android:attr/textAppearanceSmall" android:layout_height="wrap_content"></TextView>
